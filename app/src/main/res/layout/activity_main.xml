<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_12"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainActivity_rhymes"
        android:layout_width="171dp"
        android:layout_height="343dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/home_rhymes"
        android:background="@drawable/rhymes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainActivity_zoo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainActivity_zoo"
        android:layout_width="171dp"
        android:layout_height="343dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/home_zoo"
        android:background="@drawable/zoo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainActivity_bank"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mainActivity_rhymes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainActivity_bank"
        android:layout_width="171dp"
        android:layout_height="343dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bank"
        android:contentDescription="@string/home_bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainActivity_zookeeper"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mainActivity_zoo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainActivity_zookeeper"
        android:layout_width="171dp"
        android:layout_height="343dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/home_zookeeper"
        android:background="@drawable/zookeeper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mainActivity_bank"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainActivity_logout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/logout3x"
        android:contentDescription="@string/home_logout"
        app:layout_constraintBottom_toTopOf="@+id/mainActivity_zookeeper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

</android.support.constraint.ConstraintLayout>